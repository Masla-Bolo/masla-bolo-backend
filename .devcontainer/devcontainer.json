{
    "name": "Django + GDAL Codespace",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "forwardPorts": [8000],
    "containerEnv": {
      "gdal_path": "/usr/lib/libgdal.so.34",
      "geos_path": "/usr/lib/x86_64-linux-gnu/libgeos_c.so",
      "proj_lib_path": "/usr/share/proj",
      "DJANGO_DEBUG": "True"
    },
    "postCreateCommand": "pip install -r requirements.txt && python manage.py migrate && python manage.py collectstatic --noinput",
    "customizations": {
      "vscode": {
        "settings": {
          "python.defaultInterpreterPath": "/usr/local/bin/python"
        },
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance",
          "ms-azuretools.vscode-docker"
        ]
      }
    },
    "remoteUser": "vscode"
  }
  